<div class="container-fluid">
  <div class="row">
    <h3 style="text-align: center">Is he playing right now on his C9 tag?</h3>
    <h3 style="text-align: center"><%= @player.get_status %></h3>
    <div class="center-container">
      <div id="search-results">
        <%#= @player.pull_videos.html_safe %>    
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="row character">
    <% @player.stats.each do |stat| %>
      <div class="col-md-3" style="text-align:center">
        <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
          <div class="flipper">
              <div class="front">
                <h3><%= stat.get_character.name %></h3>
                <%= image_tag stat.get_character.image %>
              </div>
              <div class="back">
                <p>Games won:<%= stat.games_won %></p>
                <p>Games lost:<%= stat.games_lost %></p>
                <p>Character kills:<%= stat.character_kills %></p>
                <p>Character assists:<%= stat.character_assists %></p>
              </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-2">
    <div class="row">
      <p>PlaceHolder</p>
      <%# @player_twitter.each do |tweet| %>
        <%#= tweet.html_safe %>
      <%# end %>
    </div>
  </div>
</div>

